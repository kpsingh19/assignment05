<div class="row">
  <div class="col-md-12">
    <h2>Categories
      <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
    </h2>
    <hr/>

    <!-- Always display the table -->
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th></th> <!-- Empty column header for the remove link -->
          </tr>
        </thead>
        <tbody>
          {{#if categories}}
            {{#each categories}}
              <tr>
                <td><a href="/posts?category={{id}}">{{id}}</a></td>
                <td><a href="/posts?category={{id}}">{{category}}</a></td>
                <td>
                  <!-- Remove button -->
                  <a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a>
                </td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>

    <!-- Display the message if there are no categories -->
    {{#unless categories}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}
  </div>
</div>